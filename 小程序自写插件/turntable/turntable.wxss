page {
  width: 100%;
  height: 100%;
}

.container {
  z-index: 1;
  padding-top: 220rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  height: 100%;
  /* background-color: #e74143; */
}
.container-img{
  width: 100%;
  height:100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}
.plate-wrap-box {
  position: relative;
  z-index: 999;
  /* width: 500rpx;
  height: 500rpx; */
  /* width: 800rpx; */
  /* height: 800rpx; */
  border-radius: 50%;
  /* margin: 150rpx auto 60rpx; */
}

.plate-border {
  position: relative;
  z-index: 9;
  /* width: 500rpx;
  height: 500rpx; */
  width: 650rpx;
  height: 650rpx;
  background-color: #FF5253;
  border-radius: 50%;
  margin: auto;
}

.plate-wrap {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 9;
  width: 550rpx;
  height: 550rpx;
  border: 6rpx solid #E9383B;
  border-radius: 50%;
  overflow: hidden;
  margin: auto;
}

.plate-light {
  z-index: 1;
  width: 640rpx;
  height: 640rpx;
  border: none;
}

.plate-box {
  position: absolute;
  z-index: 1;
  left: 50%;
  width: 0;
  height: 0;
  font-size: 24rpx;
  /* display: none; */
}

.bulb {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  left: 50%;
  top: -242rpx;
  transform: translate(-50%, 0);
  border-radius: 50%;
  background-color: #FFF4AB;
  filter: blur(0.5rpx);
}
.bulb.on{
  background-color: #FFFFFF;
  box-shadow: 0px 0px 2rpx #fff;
}
.text-box {
  position: absolute;
  text-align: center;
  display: inline-block;
  width: 15rpx;
  word-break: break-all;
  top: -200rpx;
  transform: translate(-100%, 0);
  font-size: 28rpx;
}

.plate-btn-wrap {
  position: absolute;
  z-index: 10;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.plate-btn-wrap::before {
  content: '';
  position: absolute;
  z-index: 9;
  left: calc(50% - 10rpx);
  top: -40rpx;
  transform: translate(-50%, 0);
  width: 0;
  height: 0;
  border-bottom: 80rpx solid #e7211b;
  border-left: 20rpx solid transparent;
}

.plate-btn-wrap::after {
  content: '';
  position: absolute;
  z-index: 9;
  left: calc(50% + 10rpx);
  top: -40rpx;
  transform: translate(-50%, 0);
  width: 0;
  height: 0;
  border-bottom: 80rpx solid #FDEC75;
  border-right: 20rpx solid transparent;
}

.plate-btn-box {
  position: relative;
  z-index: 11;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #FDEC75;
  display: flex;
  justify-content: center;
  align-items: center;
}

.plate-inner-btn {
  position: relative;
  z-index: 999;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #FFDA39;
  font-size: 28rpx;
  color: #E9383B;
  display: flex;
  justify-content: center;
  align-items: center;
}

