.weui-tab{
  width: 100%;
}
.swiper-tab{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
}
.swiper-tab-item{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  height: 90rpx;
  color: black;
  line-height: 90rpx;
}
.active{
    border-bottom: 2px solid orange;
    
}
swiper{
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
  height: 800px;
}
swiper-item{
  overflow-y: scroll;
  -webkit-overflow-scrolling : touch;
}
.active{
  color: orange;
}
.picture{
  z-index: 0;
  width: 100%;
  margin-bottom: 30px;
  position: relative;
}
.picture ::before{
  position: absolute;
  border:11px solid transparent;
  border-left:17px solid #fff;
  content: "";
  top: 100px;
  left: 180px;
}

.top{
  color: white;
  position: absolute;
  left: 5px;
  z-index: 1;
}
.list-title{
  margin-bottom: 15px;
  text-align: left;
  display: inline-block;
  font-weight: bold;
}
.contain{
  text-align: left;
}
.wz{
  width: 100%;
}
.list-font{
  font-size: 20px;
  font-family: Arial,Helvetica,sans-serif;font-size:100%;
}
.detail{
  margin-bottom: 20px;
}