.wimgs {
  width: 100%;
  padding: 20rpx;
  /* height: 100rpx; */
  box-sizing: border-box;
  background: #fff;
}

.wimgs_item {
  width: 22%;
  height: 100%;
  text-align: center;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  position: relative;
}

.wimgs_item icon {
  width: 100%;
  /* height: 100rpx; */
  color: red;
  font-size: 120rpx;
}

.wimgs_item image {
  width: 100%;
  height: 160rpx;
  /* margin-right: 10rpx; */
}
.wimgs_item icon.end {
  width: 50rpx;
  height: 50rpx;
  color: #eee;
  font-size: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}