
.spinner{
  width:100%;
height:88rpx;
background:rgba(255,255,255,1);
display: flex;
align-items: center;
justify-content: space-between;
padding: 0 20rpx;
box-sizing: border-box;
color: #999;
font-size: 26rpx;
border-bottom: 1px solid #eee;
}
.spinner_r{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width:156rpx;
height:44rpx;
border:1px solid rgba(216,216,216,1);
border-radius:10rpx;
overflow: hidden;
}
.spinner_r text{
  flex: 1;
  text-align: center;
  font-size: 26rpx;
}
.spinner_r input{
  flex: 1.5;
  text-align: center;
  border-left: 1px solid #eee;
   border-right: 1px solid #eee;
   color: #212121;
   font-size: 24rpx;
}