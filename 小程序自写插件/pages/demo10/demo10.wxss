.con-cont{
   width: 100%;
  overflow: hidden;
  background: #fff;
   margin-top: 10rpx;
}
.con-navbar{
  white-space: nowrap; 
  display: flex;
  overflow: auto;  
}
.con-view{
  width: 400rpx;
  height: 200rpx;
  background: orange;
  margin: 10rpx 20rpx;
  display: inline-block;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.con-view text{
  font-size: 42rpx;
  color: #fff;
  display: block;
  margin-left: 25rpx;
}
.con-view .slow{
  font-size: 26rpx;
  margin-left: 20rpx;
}
