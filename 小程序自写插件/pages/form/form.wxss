.section{
  width: 100%;
  padding: 20rpx;
  /* height: 100rpx; */
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #444;
}
.section_gap label{
  margin-left: 20rpx;
}
.section input{
  text-align: right;
}
.pr45{
  padding-right: 45rpx;
  box-sizing: border-box;
}
picker input{
  width:390rpx;
}
.picker image{
  width: 25rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.btn-area{
  width: 100%;
  background: #fff;
  margin-top: 50rpx;
}
.btn-area button::after{
  border: 0;
}
.btn-area .submit{
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
  color: #fff;
  background: green;
  line-height: 90rpx;
}

