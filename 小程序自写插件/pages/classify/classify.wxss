  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
}
.suo_l{
  width:645rpx;
height:56rpx;
background:rgba(220,220,220,1);
opacity:0.4;
border-radius:24rpx;
