/*  */
.navBox{
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-top: 2rpx solid #eee;

}
.nav_l{
  font-size: 26rpx;
  flex: 2.3;
  text-align: center;
  color: #676767;
}
.nav_r{
  flex: 7.7;
  display: flex;
  align-items: center;
 
}
.navr_list{
  flex: 1;
   border-left: 2rpx solid #eee;
   font-size: 26rpx;
   color: #676767;
   text-align: center;
}
.nav_active{
  color: #444;
}
.navr_img{
  width: 15rpx;
  height: 25rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

/* 商品列表 */
.list{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.list_item{
  width: 49.5%;
  background: #fff;
  height: 524rpx;
  margin-bottom: 10rpx;
}
.item_img{
  width:100%;
height:370rpx;
vertical-align: top;
}
.item_cont{
  height: 154rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.item_title{
  color: #444444;
 line-height:40rpx;
  font-size: 24rpx;
  overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp:2; /* 设置行数 */
-webkit-box-orient: vertical;
}
.item_foot{
  height: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #999999;
  font-size: 22rpx;
}
.item_m{
  color: #FF3000;
  font-size: 24rpx;
  margin-right: 18rpx;
}






.classify-hui{
  width:100%;
  height:100%;
  background-color: rgba(0, 0, 0, 0.2);
  position: fixed;
  top: 0;
  right:0;
  bottom:0;
  left:0;
  z-index: 222;
  display: block;
}
.classify-choose{
  width:79%;
  height:100%;
  position: fixed;
  top: 0;
  right:0;
  bottom:0;
  left:21%;
  background-color: #fff;
  z-index: 22222;
  display: block;
}
.tanHide{
  display: none;
}
.classify-choose-top{
  width:100%;
  overflow: auto;
  padding: 50rpx 0rpx 0 18rpx;
  box-sizing: border-box;
}
.classify-choose-top-brand,.classify-choose-top-type{
  width:100%;
  margin-top: 10rpx;
}
.classify-choose-top-brand1,.classify-choose-top-type1{
  font-size: 28rpx;
  width:100%;
  margin-bottom: 18rpx;
}
.classify-choose-top-brand2,.classify-choose-top-type2{
  width:100%;
}
.classify-choose-top-brand2 text,.classify-choose-top-type2 text{
  width:180rpx;
  height:72rpx;
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  line-height:72rpx;
}
.is_checked{
  background-color:#2abbb4;
  color:#fff;
}
.normal{
  background-color:#e5e5e5;
  color:#999;
}
.classify-choose-bottom{
  width:100%;
  height:72rpx;
  position: absolute;
  bottom:0;
  left:0;
}
.classify-choose-bottom view{
  width:50%;
  height:72rpx;
  float:left;
}
.classify-choose-bottom text{
  width:100%;
  height:72rpx;
  display: block;
  line-height:72rpx;
  text-align: center;
}
.classify-choose-bottom-input1{
  background-color: #94ddd9;
  color:#fff;
  font-size: 28rpx;
}
.classify-choose-bottom-input2{
  background-color: #2abbb4;
  color:#fff;
  font-size: 28rpx;
}