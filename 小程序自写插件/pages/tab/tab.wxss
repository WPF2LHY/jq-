/* 普通切换 */
.wTab {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  height: 90rpx;
}

.wTab .wTab_item {
  width: 25%;
  /* padding: 20rpx; */
  height: 100%;
  box-sizing: border-box;
  text-align: center;
  font-size: 28rpx;
  color: #444;
  line-height: 90rpx;
}

.wTab .wTab_item.active {
  color: orange;
  border-bottom: 4rpx solid orange;
}


/* swiper切换 */


.weui-tab{
  width: 100%;
}
.swiper-tab{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  /* border-bottom: 1rpx solid #ededed; */
  /* padding: 0 150rpx; */
  background: #fff;
  border-top: 1px solid #EAEAEA;
}
.swiper-tab-item{
  /* flex: 1; */
  text-align: center;
  font-size: 32rpx;
  height: 90rpx;
  color: black;
  line-height: 90rpx;
   border-bottom: 2px solid #fff;
   position: relative;
}
.swiper-tab-item:nth-child(1)::after{
  content: "";
  width:1px;
height:50rpx;
background:rgba(234,234,234,1);
position: absolute;
right: -120rpx; /*2个标题切换*/
  /* right: -70rpx;3个标题切换 */
  /* right: -30rpx;3个标题切换  */
top: 20rpx;
}

.active{
    border-bottom: 2px solid #FF3000;
     color: #FF3000;
}
swiper{
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
  height: 800px;
}
swiper-item{
  overflow-y: scroll;
  -webkit-overflow-scrolling : touch;
}


